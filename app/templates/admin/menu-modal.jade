.modal-dialog
  .modal-content
    .modal-header
      if menu.get('date')
        h4= 'Menu for ' + resto.get('name') + ' (' + menu.formatDate() + ')'
      else
        h4= 'New Menu for ' + resto.get('name')
    .modal-body
      #menu-form
        .form-group
          label.hidden-xs(for="menu-date") Date
          // type date doesn't work with chrome..
          input#menu-date.form-control.date-picker(type="text", value=menu.formatDate())
          span.add-on
            i.icon-th
        hr
        button#new-dish.btn.btn-primary  New Dish
        #dishes
          - var flatDishes = menu.flattenDishes()
          if flatDishes.length > 0
            each dish in flatDishes
              include ./dish-edit
          else if savedDishes
            each dish in savedDishes
              include ./dish-edit





    .modal-footer
      button.btn.btn-default(data-dismiss="modal") Never mind
      button#save-menu.btn.btn-primary Save
